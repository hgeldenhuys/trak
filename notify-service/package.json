{
  "name": "@claude-loom/notify-service",
  "version": "1.0.0",
  "description": "Centralized notification service for Claude Code with multi-repo audio queuing",
  "type": "module",
  "main": "src/server.ts",
  "bin": {
    "claude-notify": "src/cli.ts",
    "notify-admin": "src/admin-cli.ts"
  },
  "scripts": {
    "start": "bun run src/server.ts",
    "dev": "bun run --watch src/server.ts",
    "cli": "bun run src/cli.ts",
    "test": "bun test",
    "build": "bun build src/cli.ts --outdir dist --target bun",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "claude",
    "claude-code",
    "notifications",
    "tts",
    "text-to-speech",
    "discord",
    "audio",
    "loom"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/claude-loom.git",
    "directory": "notify-service"
  },
  "files": [
    "src/**/*.ts",
    "README.md"
  ],
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@ngrok/ngrok": "^1.6.0",
    "marked": "^17.0.1"
  }
}
